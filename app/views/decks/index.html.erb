<div class="container">
  <ol class="breadcrumb">
    <li class="breadcrumb-item">
      <%= link_to "Categories", categories_path %>
    </li>
    <li class="breadcrumb-item">
      <%= @category.name %>
    </li>
  </ol>

  <div class="text-center">
    <h1>Decks for your <%= @category.name %> Category </h1>
    <%= link_to "Add Deck", new_category_deck_path %>  
  </div>

  <hr>

  <% @category.decks.each do |deck| %>
    <div class="card categories text-center">
      <h2>
        <%= link_to deck.name, category_deck_cards_path(@category.id, deck) %>
      </h2>
      <div>
        <%= link_to "Edit Deck", edit_category_deck_path(@category.id, deck), class: "btn-sm btn-info" %>
        <%= link_to "Delete Deck", category_deck_path(@category.id, deck), method: :delete, data: { confirm: "Are you sure you want to delete this deck? If you do, all of it's cards will also be deleted." }, class: "btn-sm btn-danger" %>
      </div>
    </div>
  <% end %>
</div>  