<div class="container">
  <ol class="breadcrumb">
    <li class="breadcrumb-item">
      <%= link_to "Categories", categories_path %>
    </li>
    <li class="breadcrumb-item">
      <%= @category.name %>
    </li>
  </ol>

  <div class="text-center">
    <h1>Decks for your <%= @category.name %> Category </h1>
    <h2>
      <%= link_to fa_icon('plus-circle'), new_category_deck_path %>
    </h2>
  </div>

  <hr>

  <% @category.decks.each do |deck| %>
    <div class="category-setup text-center">
      <%= link_to(category_deck_cards_path(@category.id, deck)) do %>
        <p class="card categories text-center">
          <%= deck.name %><br>
        </p> 
      <% end %>
      <div class="text-center">
        <%= link_to fa_icon('edit'), edit_category_deck_path(@category.id, deck), class: "btn-sm btn-info" %>
        <%= link_to fa_icon('trash'), category_deck_path(@category.id, deck), method: :delete, data: { confirm: "Are you sure you want to delete this deck? If you do, all of it's cards will also be deleted." }, class: "btn-sm btn-danger" %>
      </div>
    </div>
  <% end %>
</div>  