<%= form_for(@deck, url: {action: action}) do |f| %>
  <% if @deck.errors.any? %>
    <% @deck.errors.full_messages.each do |error| %>
      <%= alert_generator error %> 
    <% end %>
  <% end %>

  <div class="form-group">
    <%= f.text_field :name, class: "form-control", placeholder: "Deck Name", autofocus: true %>
  </div>

  <div class="form-group">
    <%= f.submit nil, class: "btn-block btn-primary" %>
  </div>

<% end %>
