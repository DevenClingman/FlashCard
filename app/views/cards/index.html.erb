<div class="container">
  <h1><%= @deck.name %></h1>

  <ol class="breadcrumb">
    <li class="breadcrumb-item">
      <%= link_to "Categories", categories_path%>
    </li>
    <li class="breadcrumb-item">
      <%= link_to @category.name, category_decks_path(@category.id) %>
    </li>
    <li class="breadcrumb-item active">
      <%= @deck.name %>
    </li>
  </ol>

<div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
  <div class="carousel-inner" role="listbox">  <div class="carousel-item active">
    <% count = 0%>
    <% @deck.cards.each do |card|%>
      <div class="carousel-item cards">
        <div class="card text-center switch">
          <div class="card-block cards card-question<%= active?(count) %>">
            <%= card.question %>
          </div>
          <div class="card-block cards card-answer" style="display: none;">
            <%= card.answer %>
          </div>
        </div>
      </div>
      <% count += 1%>
    <% end %>       
  </div>
  <a class="carousel-control-prev button-switch" href="#carouselExampleControls" role="button" data-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="carousel-control-next button-switch" href="#carouselExampleControls" role="button" data-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="sr-only">Next</span>
  </a>
</div>

  <div>
    <%= link_to "Add New Card", new_category_deck_card_path %>
  </div>  
</div>