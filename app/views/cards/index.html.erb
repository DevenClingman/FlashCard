<h1>Cards</h1>

<div>
  <%= link_to "New Card", new_card_path %>
</div>

<% @cards.each do |card| %>
  <div>
    <%= card.question %>
  </div>

  <div>
    <%= card.answer %>
  </div>

  <div>
    <%= link_to "View", card %>
    <%= link_to "Edit", edit_card_path(card) %>
    <%= link_to "Delete", card, method: :delete, data: {confirm: "Are you sure you'd like to delete this card?"} %>
  </div>
  <hr>
<% end %>