<div class="container">
  
  <ol class="breadcrumb">
    <li class="breadcrumb-item">
      <%= link_to "Categories", categories_path%>
    </li>
    <li class="breadcrumb-item">
      <%= link_to @category.name, category_decks_path(@category.id) %>
    </li>
    <li class="breadcrumb-item active">
      <%= @deck.name %>
    </li>
  </ol>

  <h1 class="text-center">Cards for your <%= @deck.name %> deck</h1>
  <h2 class="text-center">
    <%= link_to fa_icon('plus-circle'), new_category_deck_card_path %>
  </h2>

  <% @deck.cards.each do |card|%>
    <div class="category-setup text-center">
      <%= link_to(category_deck_card_path(@category.id, @deck.id, card)) do %>
        <p class="card categories text-center">
          <%= card.question.slice(0,20) %>...<br>
        </p> 
      <% end %>
      <div>
        <%= link_to fa_icon('edit'), edit_category_deck_card_path(@category.id, @deck.id, card), class: "btn-sm btn-info" %>
        <%= link_to fa_icon('trash'), category_deck_card_path(@category.id, @deck.id, card), method: :delete, data: { confirm: "Are you sure you want to delete this card?" }, class: "btn-sm btn-danger" %>
      </div>
    </div>
  <% end %>  
</div>  
