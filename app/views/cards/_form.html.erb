<%= form_for(@card, url: {action: "update"}) do |f| %>
  <% if @card.errors.any? %>
    <% @card.errors.full_messages.each do |error| %>
      <%= alert_generator error %> 
    <% end %>
  <% end %>

  <div>
    <%= f.label :question %>
    <%= f.text_area :question, rows: 15 %>
  </div>

  <div>
    <%= f.label :answer %>
    <%= f.text_area :answer, rows: 15 %>
  </div>

  <div>
    <%= f.submit %>
  </div>

<% end %>