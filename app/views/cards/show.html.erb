<div class="container">

  <ol class="breadcrumb">
    <li class="breadcrumb-item">
      <%= link_to "Categories", categories_path%>
    </li>
    <li class="breadcrumb-item">
      <%= link_to @category.name, category_decks_path(@category.id) %>
    </li>
    <li class="breadcrumb-item">
      <%= link_to @deck.name, category_deck_cards_path(@category.id, @deck.id) %>
    </li>
    <li class="breadcrumb-item active">
      <%= @deck.name%> card
    </li>
  </ol>

  <h1 class="text-center">
    <%= @deck.name %>
  </h1>
    <div class="card flash-card-container">
      <div>
        <h2 class="card-new">
          <%= link_to fa_icon('plus'), new_category_deck_card_path(@category.id, @deck.id)%>
        </h2>
        <h2 class="card-edit-delete">
          <%= link_to fa_icon('trash'), category_deck_card_path(@category.id, @deck.id, @card), method: :delete, data: { confirm: 'Are you sure you want to delete this card?'} %>
        </h2>
        <h2 class="card-edit-delete">
          <%= link_to fa_icon('edit'), edit_category_deck_card_path(@category.id, @deck.id, @card)%>
        </h2>
      </div>
      <div class="card-block flash-card text-center switch"> 
        <h3 class="card-question">
          <div>
            <h2>Question</h2>
          </div>
          <hr>
          <%= markdown @card.question %>
        </h3>
        <h3 class="hide card-answer">
          <div>
            <h2>Answer</h2>
          </div>
          <hr>
          <%= markdown @card.answer %>
        </h3>
      </div>
      <div class="navigators">
        <h1 id="prev-nav">
          <%= link_to fa_icon('arrow-circle-left'), category_deck_card_path( @category.id, @deck.id, @card.previous ) if @card.previous %>
        </h1>
        <h1 id="next-nav">
          <%= link_to fa_icon('arrow-circle-right'), category_deck_card_path( @category.id, @deck.id, @card.next ) if @card.next %>
        </h1>
      </div>  
    </div>  
</div>
