<%= form_for(@category) do |f| %>
  <% if @category.errors.any? %>
    <% @category.errors.full_messages.each do |error| %>
      <%= alert_generator error %> 
    <% end %>
  <% end %>
  <div>
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>
  <div>
    <%= f.submit "Save Category" %>
  </div>
<% end %>